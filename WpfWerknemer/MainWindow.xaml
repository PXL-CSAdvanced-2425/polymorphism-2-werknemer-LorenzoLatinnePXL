<Window x:Class="WpfWerknemer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWerknemer"
        mc:Ignorable="d"
        Title="Medewerkers" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Margin="0, 0, 15, 0" Width="80" Height="20" x:Name="werknemerButton" Click="werknemerButton_Click">Werknemer</Button>
            <Button Margin="0, 0, 15, 0" Width="80" Height="20" x:Name="bediendeButton" Click="bediendeButton_Click">Bediende</Button>
            <Button Margin="0, 0, 15, 0" Width="80" Height="20" x:Name="kaderButton" Click="kaderButton_Click">Kader</Button>
            <Button Margin="0, 0, 15, 0" Width="80" Height="20" x:Name="commissieButton" Click="commissieButton_Click">Commissie</Button>
        </StackPanel>
        <ListBox Grid.Row="1" Margin="10, 0, 10, 0" x:Name="resultListBox">
            
        </ListBox>
    </Grid>
</Window>
